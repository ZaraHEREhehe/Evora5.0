<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.demo1.HelloController"
            prefWidth="400" prefHeight="500"
            style="-fx-background-color: linear-gradient(to bottom right, #fbc2eb, #a6c1ee);">

    <!-- Center container -->
    <center>
        <VBox alignment="CENTER" spacing="15" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="Welcome to Ã‰vora!"
                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #444;" />
            <Label text="Your cozy productivity companion"
                   style="-fx-text-fill: gray;" />

            <!-- Card -->
            <VBox spacing="10" alignment="CENTER"
                  maxWidth="Infinity"
                  style="-fx-background-color: white; -fx-background-radius: 15;">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>

                <Label text="Log In"
                       style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #555;" />
                <Label text="Sign in to your account to continue"
                       style="-fx-text-fill: gray; -fx-font-size: 12;" />

                <VBox spacing="5" alignment="CENTER_LEFT" maxWidth="300">
                    <Label text="Email:" style="-fx-text-fill: #444;" />
                    <TextField fx:id="emailField"
                               promptText="Enter your email"
                               maxWidth="Infinity"
                               style="-fx-background-radius: 10;" />
                </VBox>

                <VBox spacing="5" alignment="CENTER_LEFT" maxWidth="300">
                    <Label text="Password:" style="-fx-text-fill: #444;" />
                    <PasswordField fx:id="passwordField"
                                   promptText="Enter your password"
                                   maxWidth="Infinity"
                                   style="-fx-background-radius: 10;" />
                </VBox>

                <CheckBox fx:id="rememberMe" text="Remember me" />

                <Button fx:id="loginButton" text="Sign In"
                        onAction="#onLoginClick"
                        maxWidth="200"
                        style="-fx-background-color: linear-gradient(to right, #ff9a9e, #fad0c4);
                               -fx-text-fill: white; -fx-background-radius: 15; -fx-padding: 8 20;" />

                <HBox alignment="CENTER" spacing="5">
                    <Label text="Don't have an account?" style="-fx-text-fill: gray;" />
                    <Button fx:id="signupButton" text="Sign up" onAction="#onSignupClick"
                            style="-fx-text-fill: #e75480; -fx-background-color: transparent;" />
                </HBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>
